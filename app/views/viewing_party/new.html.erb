<h1><%= @movie.title %></h1>
<%= form_with url: user_movie_viewing_party_index_path(@user_id, @movie_id), method: :post, local: true, data: { turbo: false } do |f| %>
  <%= f.label :duration %>
  <%= f.number_field :duration, value: @movie.runtime, min: @movie.runtime %>
  <br>
  <%= f.label :date, "When" %>
  <%= f.date_field :date %>
  <br>
  <%= f.label :start_time %>
  <%= f.time_field :start_time %>
  <br>
  <%= f.label :guest_email_1 %>
  <%= f.email_field :guest_email_1 %>
  <br>
  <%= f.label :guest_email_2 %>
  <%= f.email_field :guest_email_2 %>
  <br>
  <%= f.label :guest_email_3 %>
  <%= f.email_field :guest_email_3 %>
  <br>
  <%= f.submit "Create Viewing Party" %>
<% end %>